                        var option = '<option>' + value + '</option>';
                        select.append(option);
                    });


                var pwindow = $(generateWindow(data,
                                                template,
                                                viewlist,
                                                type,
                                                title));


                var iframe = pwindow.find("iframe:eq(0)");
                if (iframe != null)
                    iframe.focus();
                $("body").append(pwindow.draggable());
            }
        }

